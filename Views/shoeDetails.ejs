<div class="container">
  <div class="card">
    <% if (messages.error) { %>
      <p style="color:red;text-align:center"><%- messages.error %></p>
     <%}%>
     <% if(messages.success) {  %>
       <p style="color:green;text-align:center"><%- messages.success %></p>
       <%}%>
       <% if(messages.info){%>
       <p style="color:blue;text-align:center"><%- messages.info %></p>
       <%}%>
    <div class="container-fliud">
      <%if(details){%>
        <%details.forEach(function(detail){%>
      <div class="wrapper row">
        <div class="preview col-md-6">

          <div class="preview-pic tab-content">
            <div class="tab-pane active" id="pic-1"><img src="/images/<%-detail.pic1%>" /></div>
            <div class="tab-pane" id="pic-2"><img src="/images/<%-detail.pic1%>" /></div>
            <div class="tab-pane" id="pic-3"><img src="/images/<%-detail.pic2%>" /></div>
            <div class="tab-pane" id="pic-4"><img src="/images/<%-detail.pic3%>" /></div>

          </div>
          <ul class="preview-thumbnail nav nav-tabs">
            <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="/images/<%-detail.pic1%>" /></a></li>
            <li><a data-target="#pic-2" data-toggle="tab"><img src="/images/<%-detail.pic1%>" /></a></li>
            <li><a data-target="#pic-3" data-toggle="tab"><img src="/images/<%-detail.pic2%>" /></a></li>
            <li><a data-target="#pic-4" data-toggle="tab"><img src="/images/<%-detail.pic3%>" /></a></li>

          </ul>

        </div>

        <div class="details col-md-6">
          <h3 class="product-title"><%-detail.productName%></h3>
          <div class="rating">
            <div class="stars">
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star"></span>
              <span class="fa fa-star"></span>
            </div>
            <h4 class="price">Release Date: <span><%-format(detail.releaseDate,'dd-mmm-yyyy')%></span></h4>
            <span class="review-no"></span>
          </div>
          <div class="">
          <b>Current status:</b>
                 <span style="float:right" class=""><h3 ><label style="color:blue"><%-detail.status%></label></h3></status>
               </div>
          <p class="product-description"><%-detail.description%></p>
          <h4 class="price" id="price" >current price: <span ><%-detail.price%> FRW</span></h4>
          <p class="vote"><strong></strong></p>
          <h5 class="sizes">sizes:
            <div class="input-group">

                  <select id="size" name="sizes" class="form-control">
                    <option value="">Choose shoe size</option>
                    <option value="36">36</option>
                    <option value="39">39</option>
                    <option value="42">42</option>
                     <option value="43">43</option>
                      <option value="45">45</option>
                  </select>

              </div>
          </h5>
             <input type="hidden" name="price" value="<%-detail.price%>">
             <input type="hidden" name="id" value="<%-detail.productID%>">
              <input type="hidden" name="model" value="<%-detail.productName%>">
               <input type="hidden" name="category" value="<%-detail.model%>">
                <input type="hidden" name="pic" value="<%-detail.pic1%>">

          <div class="action">
            <button id="addTocart" class="btn btn-success btn-block" type="submit">Add to cart</button>
          </div>

        </div>
      </div>
    </div>
    <%})%>
    <%}%>
  </div>
</div>
  </form>
